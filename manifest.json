{
    "manifest_version": 3,
    "name": "Multi Sesions",
    "author": "Megaheart",
    "version": "0.0.1",
    "description": "Made by Megaheart",
    "icons": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Multi Modes for Chrome",
      "default_popup": "popup.html"
    },
    "permissions":["tabs", "storage"],
    "options_ui": {
      "page": "settingPage.html",
      "open_in_tab": true
    },
    
    "browser_specific_settings": {
      "gecko": {
        "id": "multi_sesions@megaheart.com"
      }
    }

  }